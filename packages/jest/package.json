{
  "name": "@growflow/jest",
  "description": "Shareable Jest configuration to get testing up and running quickly for GrowFlow frontend and backend applications",
  "main": "lib/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "version": "6.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/GrowflowTeam/javascript.git"
  },
  "author": "GrowFlow",
  "license": "MIT",
  "files": [
    "lib",
    "dist",
    "README.md"
  ],
  "keywords": [
    "jest",
    "config",
    "growflow"
  ],
  "scripts": {
    "build": "rimraf lib dist && tsc -p tsconfig.output.json && cross-env BABEL_ENV=node babel src -d lib --root-mode upward --extensions \".ts,.js\" --source-maps",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@types/jest": "^27.0.1",
    "deepmerge": "^4.2.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.2.0",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "jest-ts-auto-mock": "^2.0.0",
    "node-fetch": "^3.0.0",
    "ts-jest": "^27.0.5",
    "ttypescript": "^1.5.12"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "rimraf": "^3.0.2"
  }
}
